<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:outlineAmbientShadowColor="@color/hitam"
        android:outlineSpotShadowColor="@color/hitam"
        app:cardBackgroundColor="#ddd">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/hari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hari"
                    android:textColor="@color/hitam"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/tanggal"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textColor="@color/hitam"
                    android:textSize="17sp"/>
                <View
                    android:layout_below="@+id/tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hitam"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jam Datang"
                    android:textStyle="bold"
                    android:textColor="@color/hitam"
                    android:textSize="15sp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jam Pulang"
                    android:textStyle="bold"
                    android:textColor="@color/hitam"
                    android:textSize="15sp"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/jam_datang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jam Datang"
                    android:textStyle="bold"
                    android:textColor="@color/agakabu"
                    android:textSize="15sp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/jam_pulang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jam Pulang"
                    android:textStyle="bold"
                    android:textColor="@color/agakabu"
                    android:textSize="15sp"
                    android:textAlignment="center"/>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/hitam"
                android:layout_marginTop="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan : "
                    android:textColor="@color/hitam"/>
                <TextView
                    android:id="@+id/keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Finger"
                    android:textColor="@color/agakabu"/>
            </LinearLayout>
        </LinearLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>